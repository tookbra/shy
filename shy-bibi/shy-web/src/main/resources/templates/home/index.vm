#set($layout="layout/default.vm")

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="hidden-sm" href="#"><img src="/images/logo.png"></a>
        </div>
        <div class="navbar-collapse collapse" role="navigation" aria-expanded="false">
            <ul class="nav navbar-nav navbar-right hidden-sm">
                <li><a href="#" >关于</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="container main-content">
    #foreach($item in $shyTopic)
        <div class="home-post">
            #if($item.imgs.size() > 0)
            <a href="" class="image-popup fh5co-board-img">
                <img src="$item.imgs.get(0)"
                     data-img="#foreach($img in $item.imgs)
                                $img,
                               #end" class="article-thumbnail wp-post-image">
            </a>
            #else
                <div class="no-image"></div>
            #end
            <a href="${item.url}" target="view_window">
                <h2>${item.title}</h2>
            </a>
            <div class="author">
                <div class="author-img">
                    <img alt="" src="${item.avatar}" class="avatar avatar-50 photo" height="50" width="50">
                </div>
                <div class="author-des">
                    <span><a href="${item.alt}">${item.authorName}</a></span>
                    <div class="an-display-time">
                        <i class="fa fa-location-arrow"></i>
                        ${item.authorLocation}
                    </div>
                </div>
            </div>
            <div style="clear: both;"></div>
            <div class="sub-article">
                <div class="an-display-time"><i class="fa fa-clock-o"></i>$!date.format('yyyy-MM-dd HH:mm:ss ',${item.updateTimex})</div>
                <div class="an-display-like"><a href="#" class="zilla-likes" id="zilla-likes-308" title="Like this"><span class="zilla-likes-count">317</span> <span class="zilla-likes-postfix"></span></a></div>
                <div class="an-display-view"><i class="fa fa-eye"></i> 16652</div>
            </div>
        </div>
    #end
    <div id="nav-below" class="pagination" style="display: none;">
        <div class="nav-previous"></div>
        <div class="nav-next"><a href="/page/2">Older Entries ›</a></div>
    </div>
</div>